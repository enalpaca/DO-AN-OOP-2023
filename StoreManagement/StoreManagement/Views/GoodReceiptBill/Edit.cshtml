@model StoreManagement.Models.GoodsReceiptBill
@{
    ViewData["Title"] = "Sửa hóa đơn nhập hàng";
    GoodsReceiptBill goodsReceiptBill = Model;
}
<h1>@ViewData["Title"]</h1>

@if (goodsReceiptBill == null)
{
    <p>Hóa đơn không tồn taị </p>
}
else
{
    <form asp-action="Edit" class="row">
        <div class="col-md-6">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Name" class="control-label"></label>
            <input asp-for="ProductItem.Name" class="form-control" disabled />
            <span asp-validation-for="ProductItem.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Quantity" class="control-label"></label>
            <input asp-for="ProductItem.Quantity" class="form-control" />
            <span asp-validation-for="ProductItem.Quantity" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Price" class="control-label"></label>
            <input asp-for="ProductItem.Price" class="form-control" />
            <span asp-validation-for="ProductItem.Price" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ProductItem.Provider" class="control-label"></label>
            <input asp-for="ProductItem.Provider" class="form-control" />
            <span asp-validation-for="ProductItem.Provider" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Deliver" class="control-label"></label>
            <input asp-for="Deliver" class="form-control" />
            <span asp-validation-for="Deliver" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CreateAt" class="control-label"></label>
            <input asp-for="CreateAt" class="form-control" disabled />
            <span asp-validation-for="CreateAt" class="text-danger"></span>
        </div>

        <div class="mt-3 col-md-12">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="Index">Về danh sách hóa đơn</a>
    </div>
}

