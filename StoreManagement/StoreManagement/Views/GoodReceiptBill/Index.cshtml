@model StoreManagement.Models.GoodsReceiptBillViewModel
@{
    ViewData["Title"] = "Danh sách hóa đơn nhập hàng";
}

<h1>@ViewData["Title"]</h1>

<form method="get" action="GoodReceiptBill">
    <div class="input-group mb-3">
        <input type="text" class="form-control" value="@Model.SearchText" name="searchText" placeholder="Tìm mã hóa đơn, tên KH, sdt ...">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Tìm</button>
    </div>
</form>

<h2>Tổng cộng: @Model.GoodsReceiptBillList.Count</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"> Tạo hóa đơn mới</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Mã</th>
            <th>Tên hàng</th>
            <th>Số lượng</th>
            <th>Đơn vị tính</th>
            <th>Giá</th>
            <th>Công ty</th>
            <th>Người giao hàng</th>
            <th>Ngày tạo hóa đơn</th>
            <th>Hành động</th>
        </tr>
        @foreach (var item in Model.GoodsReceiptBillList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductItem.Name</td>
                <td>@item.ProductItem.Quantity</td>
                <td>@item.ProductItem.Unit</td>
                <td>@item.ProductItem.Price</td>
                <td>@item.ProductItem.Company</td>
                <td>@item.Deliver</td>
                <td>@item.CreateAt</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    </div>

                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    </div>

                    <div class="btn-group" role="group">
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Xóa" class="btn btn-danger">
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
