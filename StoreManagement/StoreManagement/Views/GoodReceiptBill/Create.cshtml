@model StoreManagement.Models.GoodsReceiptBill
@{
    ViewData["Title"] = "Tạo hóa đơn nhập hàng";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <form asp-action="Create" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Name" class="control-label"></label>
            <select asp-for="ProductItem.Id" class="form-control" required>
                <option value="" disabled selected>Vui lòng chọn ...</option>
                @foreach (var product in ViewBag.ListProduct)
                {
                    <option value="@product.Id">@product.Name</option>
                }
            </select>
            <span asp-validation-for="ProductItem.Id" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Quantity" class="control-label"></label>
            <input asp-for="ProductItem.Quantity" class="form-control" />
            <span asp-validation-for="ProductItem.Quantity" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Unit" class="control-label"></label>
            <input asp-for="ProductItem.Unit" class="form-control" />
            <span asp-validation-for="ProductItem.Unit" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ProductItem.Price" class="control-label"></label>
            <input asp-for="ProductItem.Price" class="form-control" />
            <span asp-validation-for="ProductItem.Price" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ProductItem.Company" class="control-label"></label>
            <input asp-for="ProductItem.Company" class="form-control" />
            <span asp-validation-for="ProductItem.Company" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Deliver" class="control-label"></label>
            <input asp-for="Deliver" class="form-control" />
            <span asp-validation-for="Deliver" class="text-danger"></span>
        </div>
        <div class="mt-3 col-md-12">
            <button type="submit" class="btn btn-primary">Tạo hóa đơn</button>
        </div>
    </form>
</div>
<div class="mt-3">
    <a asp-action="Index">Về danh sách hóa đơn</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
