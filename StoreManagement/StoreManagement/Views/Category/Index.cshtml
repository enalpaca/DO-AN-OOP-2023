@model StoreManagement.Models.CategoryViewModel
@{
    ViewData["Title"] = "Danh sách loại hàng";
}

<h1>@ViewData["Title"]</h1>

<form method="post" action="Category/SearchCategory">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Tìm mã loại hàng, loại hàng ..." aria-label="Tìm mã loại hàng, loại hàng ..." aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Tìm</button>
    </div>
</form>

<h2>Tổng cộng: @Model.CategoryList.Count</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm mới loại hàng</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Mã</th>
            <th>Tên loại hàng</th>
            <th>Hành động</th>
        </tr>
        @foreach (var item in @Model.CategoryList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    </div>

                    <div class="btn-group" role="group">
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <input type="submit" value="Xóa" class="btn btn-danger">
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>