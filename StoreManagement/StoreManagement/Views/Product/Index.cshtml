@model StoreManagement.Models.ProductViewModel
@{
    ViewData["Title"] = "Danh sách mặt hàng";
    Product[] ProductList = Model.ProductList.ToArray();
}

<h1>@ViewData["Title"]</h1>

<form method="post" action="Product/SearchProduct">
    <div class="input-group mb-3">
        <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Tìm mã hàng, mặt hàng ..." aria-label="Tìm mã hàng, mặt hàng ..." aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Tìm</button>
    </div>
</form>

<h2>Tổng cộng: @ProductList.Length</h2>

<div class="mb-3">
    <form style="display: inline" action="/Product/Create" method="get">
        <button class="btn btn-primary">Thêm mới mặt hàng</button>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Mã</th>
            <th>Tên hàng</th>
            <th>Hạn dùng</th>
            <th>Công ty sản xuất</th>
            <th>Ngày sản xuất</th>
            <th>Loại hàng</th>
            <th>Giá</th>
            <th>Số lượng tồn kho</th>
            <th>Hành động</th>
        </tr>
        @foreach (var item in ProductList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.ExpiredAt.ToString("yyyy-MM-dd")</td>
                <td>@item.Company</td>
                <td>@item.ProductionDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @(item.Category != null ? @item.Category.Name : "")
                </td>
                <td>@item.Price.ToString("#,##0")</td>
                <td>@item.Quantity</td>
                <td>

                    <div class="btn-group" role="group" aria-label="First group">
                        <a href="/Product/EditProduct?Id=@item.Id"><button type="button" class="btn btn-warning">Sửa</button></a>
                    </div>

                    <div class="btn-group" role="group" aria-label="Third group">
                        <form method="post" action="Product/DeleteProduct?ProductCode=@item.Id">
                            <input class="btn btn-danger" type="submit" value="Xóa">
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
